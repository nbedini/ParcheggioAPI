<Window x:Class="Parcheggio.Views.ControlloTarga"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parcheggio.Views"
        mc:Ignorable="d"
        Title="ControlloTarga" Height="234" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Text="{Binding Targa}" CharacterCasing="Upper" FontSize="20" HorizontalAlignment="Left" Margin="74,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="33"/>
        <Button Click="AccettaClick" Content="Accetta" HorizontalAlignment="Center" Margin="0,158,0,0" VerticalAlignment="Top" Width="80"/>
        <Label FontSize="30" FontFamily="Verdana" Content="Controllo Targa" HorizontalAlignment="Left" Margin="30,18,0,0" VerticalAlignment="Top"/>
        <Label Content="Targa" HorizontalAlignment="Center" Margin="0,83,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
