<Window x:Class="Parcheggio.Views.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parcheggio.Views"
        mc:Ignorable="d"
        Title="Parcheggio Menu'" Height="178" Width="554" ResizeMode="NoResize" Icon="/Views/Icon.ico">
    <Grid>

        <StackPanel Orientation="Horizontal" Margin="50,0,50,0" HorizontalAlignment="Center">
            <Button VerticalAlignment="Center" x:Name="btNuovo" Click="ParcheggioNuovoClick" FontSize="20" Content="Nuovo Parcheggio" Height="40" Margin="5"/>
            <Button VerticalAlignment="Center" x:Name="btEsistente" Click="ParcheggioEsistenteClick" FontSize="20" Content="Parcheggio Esistente" Height="40" Margin="5"/>
        </StackPanel>
        <Button Content="Logout" HorizontalAlignment="Left" Margin="435,10,0,0" VerticalAlignment="Top" Width="79" Click="LogoutClick"/>
    </Grid>
</Window>
